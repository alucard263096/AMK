<com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.helpfooter.steve.amklovebaby.DoctorDetailActivity"
    android:orientation="vertical">

    <com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_heightPercent="7%"
        app:layout_widthPercent="100%"
        android:background="@color/topbar_bg">
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="false"
            android:src="@drawable/back"
            app:layout_widthPercent="10%"
            app:layout_marginTopPercent="20%"
            app:layout_marginBottomPercent="20%"/>
        <com.helpfooter.steve.amklovebaby.CustomControlView.MyTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:focusable="false"
            android:text="医生详情"
            android:contentDescription="@null"
            android:textColor="#ffffff"
            app:layout_widthPercent="80%"
            app:layout_heightPercent="100%"
            android:autoText="false"
            android:elegantTextHeight="false"
            android:gravity="center"
            android:textSize="24dp" />
    </com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout>
    <com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_heightPercent="20%"
        app:layout_marginTopPercent="2%"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_widthPercent="30%"
            app:layout_marginLeftPercent="5%"
            android:src="@drawable/doctor_demo"/>
        <com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_widthPercent="58%"
            app:layout_marginLeftPercent="2%"
            app:layout_marginRightPercent="5%">
            <com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_heightPercent="40%"
                app:layout_widthPercent="100%">
                <com.helpfooter.steve.amklovebaby.CustomControlView.MyTextView
                    android:id="@+id/txtName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="医生姓名"
                    android:gravity="center_vertical"
                    app:layout_textSizePercent="50%"
                    app:layout_widthPercent="60%"/>
                <com.helpfooter.steve.amklovebaby.CustomControlView.MyTextView
                    android:id="@+id/txtFocus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="+关注"
                    android:gravity="center"
                    android:background="#37A4D4"
                    android:textColor="#ffffff"
                    app:layout_textSizePercent="20%"
                    app:layout_widthPercent="30%"
                    app:layout_marginTopPercent="20%"
                    app:layout_marginBottomPercent="40%"
                    app:layout_marginLeftPercent="10%"
                    app:layout_marginRightPercent="10%"/>
            </com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout>
            <com.helpfooter.steve.amklovebaby.CustomControlView.MyTextView
                android:id="@+id/txtOfficeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                app:layout_textSizePercent="15%"
                app:layout_widthPercent="100%"
                app:layout_heightPercent="20%"
                android:text="科室/职称"
                android:autoText="false"
                android:elegantTextHeight="false"
                android:gravity="center_vertical" />
            <com.helpfooter.steve.amklovebaby.CustomControlView.MyTextView
                android:id="@+id/txtOpenHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                app:layout_textSizePercent="10%"
                app:layout_widthPercent="100%"
                app:layout_heightPercent="20%"
                android:text="坐诊时间:XXXXXX"
                android:autoText="false"
                android:elegantTextHeight="false"
                android:gravity="center_vertical" />
            <com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_heightPercent="20%"
                app:layout_widthPercent="100%">
                <com.helpfooter.steve.amklovebaby.CustomControlView.MyTextView
                    android:id="@+id/txtQueryCount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="XXX人咨询"
                    android:gravity="bottom"
                    app:layout_textSizePercent="60%"
                    app:layout_widthPercent="50%"/>
                <com.helpfooter.steve.amklovebaby.CustomControlView.MyTextView
                    android:id="@+id/txtGeneralScore"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="综合评价:X分"
                    android:gravity="bottom"
                    app:layout_textSizePercent="60%"
                    app:layout_widthPercent="50%"/>
            </com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout>
        </com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout>
    </com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout>
    <com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_heightPercent="10%"
        app:layout_marginTopPercent="2%"
        android:id="@+id/layoutBusinee">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_heightPercent="80%"
            app:layout_widthPercent="49%"
            app:layout_marginRightPercent="1%"
            android:text="视频咨询/90元"
            android:gravity="center"
            android:background="#37A4D4"
            android:textColor="#ffffff"
            android:id="@+id/btnVedioChat"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_heightPercent="80%"
            app:layout_widthPercent="49%"
            app:layout_marginLeftPercent="1%"
            android:text="图文咨询/1元"
            android:gravity="center"
            android:background="#FD7CAD"
            android:textColor="#ffffff"
            android:id="@+id/btnCharChat"/>
    </com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout>
    <com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_widthPercent="90%"
        app:layout_marginTopPercent="2%"
        app:layout_marginLeftPercent="5%">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="介绍"
            android:textColor="#37A4D4"
            app:layout_heightPercent="10%"
            android:textSize="17dp"/>
        <com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="#37A4D4"
            app:layout_widthPercent="15%" />
        <com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#37A4D4"
            app:layout_widthPercent="100%" />
        <TextView
            android:id="@+id/txtIntroduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="介绍介绍介绍介绍介绍介绍介绍介绍"
            app:layout_marginTopPercent="5%"
            app:layout_widthPercent="90%"
            android:textSize="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="资质"
            android:textColor="#FD7CAD"
            app:layout_heightPercent="10%"
            app:layout_marginTopPercent="5%"
            android:textSize="17dp"/>
        <com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="#FD7CAD"
            app:layout_widthPercent="15%" />
        <com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#FD7CAD"
            app:layout_widthPercent="100%" />
        <TextView
            android:id="@+id/txtCredentials"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="资质资质资质资质资质资质"
            app:layout_marginTopPercent="5%"
            app:layout_widthPercent="90%"
            android:textSize="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="擅长"
            android:textColor="#37A4D4"
            app:layout_heightPercent="10%"
            app:layout_marginTopPercent="5%"
            android:textSize="17dp"/>
        <com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="#37A4D4"
            app:layout_widthPercent="15%" />
        <com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#37A4D4"
            app:layout_widthPercent="100%" />
        <TextView
            android:id="@+id/txtExpert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="擅长擅长擅长擅长擅长擅长擅长"
            app:layout_marginTopPercent="5%"
            app:layout_widthPercent="90%"
            android:textSize="15dp"/>
    </com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout>
</com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout>
