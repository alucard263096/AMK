<com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.helpfooter.steve.amklovebaby.NewsDetailActivity"
    android:orientation="vertical"
    android:background="#ffffff">

    <com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_heightPercent="7%"
        app:layout_widthPercent="100%"
        android:background="@color/topbar_bg">
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="false"
            android:src="@drawable/back"
            app:layout_widthPercent="10%"
            app:layout_marginTopPercent="20%"
            app:layout_marginBottomPercent="20%"/>
        <com.helpfooter.steve.amklovebaby.CustomControlView.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:focusable="false"
            android:text="新闻详情"
            android:contentDescription="@null"
            android:textColor="#ffffff"
            app:layout_widthPercent="80%"
            app:layout_heightPercent="100%"
            android:autoText="false"
            android:elegantTextHeight="false"
            android:gravity="center"
            android:textSize="24dp" />
    </com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout>
    <com.helpfooter.steve.amklovebaby.CustomControlView.MyTextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_heightPercent="7%"
        app:layout_marginTopPercent="5%"
        app:layout_marginLeftPercent="5%"
        app:layout_widthPercent="90%"
        android:id="@+id/txtTitle"
        android:text="标题"
        android:textSize="25dp"/>
    <com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#FD7CAD"
        app:layout_widthPercent="15%"
        app:layout_marginLeftPercent="5%" />
    <com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#FD7CAD"
        app:layout_marginLeftPercent="5%"
        app:layout_widthPercent="90%" />
    <ImageView
        android:id="@+id/imgPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginLeftPercent="5%"
        app:layout_marginTopPercent="2%"
        app:layout_widthPercent="90%"
        app:layout_heightPercent="20%"
        android:gravity="left"
        android:src="@drawable/news_photo"
        android:scaleType="fitXY" />
    <WebView
        android:id="@+id/txtContext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_widthPercent="90%"
        app:layout_marginLeftPercent="5%"
        app:layout_heightPercent="41%"
        app:layout_marginTopPercent="2%"></WebView>
    <com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_marginLeftPercent="5%"
        app:layout_widthPercent="90%"
        app:layout_heightPercent="15%"
        android:id="@+id/layoutDoctor"
        android:orientation="vertical">

    <com.helpfooter.steve.amklovebaby.CustomControlView.MyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="5%"
        android:textColor="#FD7CAD"
        android:text="新闻作者"
        android:textSize="15dp"/>
    <com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#FD7CAD"
        app:layout_widthPercent="15%" />
    <com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#FD7CAD"
        app:layout_marginLeftPercent="5%"
        app:layout_widthPercent="90%" />

        <com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_marginTopPercent="2%"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgDoctorPhoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_widthPercent="15%"
                android:src="@drawable/doctor_demo"/>
            <com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#cccccc"
                android:layout_marginLeft="1px">
                <com.helpfooter.steve.amklovebaby.CustomControlView.MyTextView
                    android:id="@+id/txtDoctorName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="医生姓名"
                    android:gravity="center_vertical"
                    app:layout_marginLeftPercent="5%"
                    app:layout_heightPercent="60%"
                    android:textSize="15dp"/>
                <com.helpfooter.steve.amklovebaby.CustomControlView.MyTextView
                    android:id="@+id/txtDoctorOfficeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    app:layout_marginLeftPercent="5%"
                    app:layout_heightPercent="40%"
                    android:text="科室/职称"
                    android:autoText="false"
                    android:elegantTextHeight="false"
                    android:gravity="center_vertical"
                    android:textSize="13dp" />
            </com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout>
        </com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout>


    </com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout>
</com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout>
