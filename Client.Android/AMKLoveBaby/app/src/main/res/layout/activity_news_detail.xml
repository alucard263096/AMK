<com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.helpfooter.steve.amklovebaby.NewsDetailActivity"
    android:orientation="vertical">

    <com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_heightPercent="7%"
        app:layout_widthPercent="100%"
        android:background="@color/topbar_bg">
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="false"
            android:src="@drawable/back"
            app:layout_widthPercent="10%"
            app:layout_marginTopPercent="20%"
            app:layout_marginBottomPercent="20%"/>
      <com.helpfooter.steve.amklovebaby.CustomControlView.MyTextView
          android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:focusable="false"
            android:text="新闻详情"
            android:contentDescription="@null"
            android:textColor="#ffffff"
            app:layout_widthPercent="80%"
            app:layout_heightPercent="100%"
            android:autoText="false"
            android:elegantTextHeight="false"
            android:gravity="center"
            android:textSize="24dp" />
    </com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_heightPercent="78%"
        android:id="@+id/idBody">

        <com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" android:background="#ffffff">

    <com.helpfooter.steve.amklovebaby.CustomControlView.MyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtTitle"
        android:text="标题"
        android:textSize="25dp"
        app:layout_marginLeftPercent="5%"
        app:layout_widthPercent="90%" />
            <com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_marginLeftPercent="5%"
                app:layout_widthPercent="90%">
                <com.helpfooter.steve.amklovebaby.CustomControlView.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_widthPercent="50%" android:text="来源：阿米卡"/>
                <com.helpfooter.steve.amklovebaby.CustomControlView.MyTextView
                    android:id="@+id/publish_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    app:layout_widthPercent="50%" android:text=""/>
            </com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px" android:background="#cccccc"></LinearLayout>
    <ImageView
        android:id="@+id/imgPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="2%"
        app:layout_heightPercent="20%"
        android:gravity="left"
        android:src="@drawable/news_photo"
        android:scaleType="fitXY" />
    <WebView
        android:id="@+id/txtContext"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layerType="software"
        app:layout_heightPercent="50%"
        app:layout_marginTopPercent="2%"></WebView>

    </com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout>
    </ScrollView>



    <com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_marginLeftPercent="2%"
        app:layout_widthPercent="96%"
        app:layout_heightPercent="15%"
        android:id="@+id/layoutDoctor"
        android:orientation="vertical">


        <com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_marginTopPercent="2%"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgDoctorPhoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_widthPercent="20%"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:src="@drawable/doctor_demo"/>
            <com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_marginLeftPercent="5%">
                <com.helpfooter.steve.amklovebaby.CustomControlView.MyTextView
                    android:id="@+id/txtDoctorName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="医生姓名"
                    android:textSize="15dp"/>
                <com.helpfooter.steve.amklovebaby.CustomControlView.MyTextView
                    android:id="@+id/txtDoctorOfficeTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="科室/职称"
                    android:textSize="13dp" />
            </com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout>
        </com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout>


    </com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout>
</com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout>
