<com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.helpfooter.steve.amklovebaby.VideoChatOrderActivity"
    android:orientation="vertical"
    android:background="#ffffff">

    <com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_heightPercent="7%"
        app:layout_widthPercent="100%"
        android:background="@color/topbar_bg">
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="false"
            android:src="@drawable/back"
            app:layout_widthPercent="10%"
            app:layout_marginTopPercent="20%"
            app:layout_marginBottomPercent="20%"/>
        <com.helpfooter.steve.amklovebaby.CustomControlView.MyTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:focusable="false"
            android:text="视频会诊"
            android:contentDescription="@null"
            android:textColor="#ffffff"
            app:layout_widthPercent="80%"
            app:layout_heightPercent="100%"
            android:autoText="false"
            android:elegantTextHeight="false"
            android:gravity="center"
            android:textSize="24dp" />
    </com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout>

    <com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_heightPercent="25%"
        app:layout_marginTopPercent="1%"
        android:orientation="horizontal"
        android:background="@color/myblue">
        <com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_marginTopPercent="10%"
            app:layout_heightPercent="80%"
            app:layout_widthPercent="30%"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgPhoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_heightPercent="80%"
                android:src="@drawable/doctor_demo"/>
            <com.helpfooter.steve.amklovebaby.CustomControlView.MyTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="预约视频通话"
            android:gravity="center"
            android:layout_gravity="center"
            app:layout_marginTopPercent="5%"
                android:textSize="11dp"
            android:textColor="#ffffff"/>
        </com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout>
        <com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_marginTopPercent="10%"
            app:layout_heightPercent="90%"
            app:layout_widthPercent="63%"
            app:layout_marginLeftPercent="2%"
            app:layout_marginRightPercent="5%">
            <com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_heightPercent="40%"
                app:layout_widthPercent="100%">
                <com.helpfooter.steve.amklovebaby.CustomControlView.MyTextView
                    android:id="@+id/txtName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="医生姓名"
                    android:gravity="center_vertical"
                    app:layout_textSizePercent="50%"
                    app:layout_widthPercent="60%"
                    android:textColor="#ffffff"/>
                <com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_widthPercent="40%"
                    app:layout_marginTopPercent="20%">
                    <com.helpfooter.steve.amklovebaby.CustomControlView.MyTextView
                        android:id="@+id/txtPrice"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_heightPercent="50%"
                        android:gravity="right"
                        android:text="120元"
                        android:textColor="#ffffff"/>
                    <com.helpfooter.steve.amklovebaby.CustomControlView.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_heightPercent="50%"
                        android:gravity="right"
                        android:text="20分钟"
                        android:textColor="#ffffff"/>
                </com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout>
            </com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout>
            <com.helpfooter.steve.amklovebaby.CustomControlView.MyTextView
                android:id="@+id/txtOfficeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                app:layout_textSizePercent="15%"
                app:layout_widthPercent="100%"
                app:layout_heightPercent="38%"
                android:text="科室/职称"
                android:autoText="false"
                android:elegantTextHeight="false"
                android:gravity="center_vertical"
                android:textColor="#ffffff" />
            <com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center"
                app:layout_widthPercent="100%">
                <com.helpfooter.steve.amklovebaby.CustomControlView.MyTextView
                    android:id="@+id/txtVideoQueryCount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="XXX人咨询"
                    android:textSize="11dp"
                    app:layout_widthPercent="50%"
                    android:textColor="#ffffff"/>
                <com.helpfooter.steve.amklovebaby.CustomControlView.MyTextView
                    android:id="@+id/txtGeneralScore"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="X分"
                    android:textSize="11dp"
                    app:layout_widthPercent="50%"
                    android:textColor="#ffffff"/>
            </com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout>
        </com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout>
    </com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout>

    <com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_widthPercent="90%"
        app:layout_marginTopPercent="2%"
        app:layout_marginLeftPercent="5%"> <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择咨询时间"
        android:textColor="#37A4D4"
        app:layout_heightPercent="10%"
        android:textSize="17dp"/>
        <com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="#37A4D4"
            app:layout_widthPercent="30%" />
        <com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#37A4D4"
            app:layout_widthPercent="100%" />

        <com.helpfooter.steve.amklovebaby.CustomControlView.MyTextView
            android:id="@+id/pickDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_heightPercent="10%"
            app:layout_marginTopPercent="3%"
            android:gravity="center"
            android:background="@color/mygreen"
            android:textColor="@color/gray"
            android:text="选择日期：2015-9-6" />

        <com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout
            android:id="@+id/layoutTimeTable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_heightPercent="60%">

        </com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout>

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/myblue"
            app:layout_marginLeftPercent="5%"
            app:layout_widthPercent="90%"
            app:layout_marginTopPercent="3%"
            app:layout_marginBottomPercent="3%"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:text="确认预约"
            />

        </com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout>


</com.helpfooter.steve.amklovebaby.Extents.PercentLayout.PercentLinearLayout>
