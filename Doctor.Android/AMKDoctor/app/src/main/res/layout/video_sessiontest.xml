<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/video_sessiontest"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <LinearLayout
        android:id="@+id/frame_local_area2"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_gravity="top|left"
        android:background="@drawable/video_bg"
        android:orientation="vertical"
        android:padding="3dip" >

        <SurfaceView
            android:id="@+id/surface_remote"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:layout_gravity="center" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/frame_local_area1"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_gravity="center|right"
        android:background="@drawable/video_bg"
        android:orientation="vertical"
        android:padding="3dip" >

        <SurfaceView
            android:id="@+id/surface_remote1"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:layout_gravity="center" />
    </LinearLayout>
   <!-- android:background="@drawable/videoremote_bg"-->
    <LinearLayout
        android:id="@+id/frame_local_area"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_gravity="bottom|right"
        android:background="@drawable/video_bg"
        android:orientation="vertical"
        android:padding="3dip" >

        <SurfaceView
            android:id="@+id/surface_local"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_gravity="center"
            android:layout_weight="1" />
    </LinearLayout>

</FrameLayout>