<com.helpfooter.steve.amkdoctor.Extents.PercentLayout.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.helpfooter.steve.amkdoctor.MemberInfoActivity"
    android:orientation="vertical"
    android:background="#ffffff">

    <com.helpfooter.steve.amkdoctor.Extents.PercentLayout.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_heightPercent="7%"
        app:layout_widthPercent="100%"
        android:background="@color/myblue">
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="false"
            android:src="@drawable/back"
            app:layout_widthPercent="10%"
            app:layout_marginTopPercent="20%"
            app:layout_marginBottomPercent="20%"/>
        <com.helpfooter.steve.amkdoctor.CustomControlView.MyTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:focusable="false"
            android:text="会员详情"
            android:contentDescription="@null"
            android:textColor="#ffffff"
            app:layout_widthPercent="80%"
            app:layout_heightPercent="100%"
            android:autoText="false"
            android:elegantTextHeight="false"
            android:gravity="center"
            android:textSize="24dp" />
    </com.helpfooter.steve.amkdoctor.Extents.PercentLayout.PercentLinearLayout>
    <com.helpfooter.steve.amkdoctor.Extents.PercentLayout.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_heightPercent="20%"
        app:layout_marginTopPercent="2%"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_widthPercent="30%"
            app:layout_marginLeftPercent="5%"
            android:src="@drawable/back"/>
        <com.helpfooter.steve.amkdoctor.Extents.PercentLayout.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_widthPercent="58%"
            app:layout_marginLeftPercent="2%"
            app:layout_marginRightPercent="5%">
            <com.helpfooter.steve.amkdoctor.Extents.PercentLayout.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_heightPercent="40%"
                app:layout_widthPercent="100%">
                <com.helpfooter.steve.amkdoctor.CustomControlView.MyTextView
                    android:id="@+id/txtName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="病人姓名"
                    android:gravity="center_vertical"
                    android:textSize="40px"
                    app:layout_widthPercent="60%"/>
            </com.helpfooter.steve.amkdoctor.Extents.PercentLayout.PercentLinearLayout>
            <com.helpfooter.steve.amkdoctor.CustomControlView.MyTextView
                android:id="@+id/txtSex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:textSize="40px"

                app:layout_widthPercent="100%"
                app:layout_heightPercent="20%"
                android:text="性别"
                android:autoText="false"
                android:elegantTextHeight="false"
                android:gravity="center_vertical" />
            <com.helpfooter.steve.amkdoctor.CustomControlView.MyTextView
                android:id="@+id/txtAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:textSize="40px"
                app:layout_widthPercent="100%"
                app:layout_heightPercent="20%"
                android:text="年龄:"
                android:autoText="false"
                android:elegantTextHeight="false"
                android:gravity="center_vertical" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#37A4D4"></LinearLayout>
        </com.helpfooter.steve.amkdoctor.Extents.PercentLayout.PercentLinearLayout>
    </com.helpfooter.steve.amkdoctor.Extents.PercentLayout.PercentLinearLayout>

    <com.helpfooter.steve.amkdoctor.Extents.PercentLayout.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_widthPercent="90%"
        app:layout_marginTopPercent="2%"
        app:layout_marginLeftPercent="5%">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="描述"
            android:textColor="#37A4D4"
            app:layout_heightPercent="10%"
            android:textSize="17dp"/>
        <com.helpfooter.steve.amkdoctor.Extents.PercentLayout.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="#37A4D4"
            app:layout_widthPercent="15%" />
        <com.helpfooter.steve.amkdoctor.Extents.PercentLayout.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#37A4D4"
            app:layout_widthPercent="100%" />
        <TextView
            android:id="@+id/txtIntroduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_marginTopPercent="5%"
            app:layout_widthPercent="90%"
            android:textSize="15dp"/>

    </com.helpfooter.steve.amkdoctor.Extents.PercentLayout.PercentLinearLayout>
</com.helpfooter.steve.amkdoctor.Extents.PercentLayout.PercentLinearLayout>
