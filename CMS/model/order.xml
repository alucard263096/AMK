<?xml version="1.0" encoding="utf-8" ?>
<root>
  <name>订单</name>
  <tablename>v_order_full</tablename>
  <searchcondition>r_main.status&lt;&gt;'D'</searchcondition>
  <fields>
    <field>
      <name>订单编号</name>
      <key>order_no</key>
      <type>text</type>
      <search>1</search>
      <displayinlist>1</displayinlist>
      <gotodetail>1</gotodetail>
      <notnull>1</notnull>
      <disableindetail>1</disableindetail>
    </field>
    <field>
      <name>会员账号</name>
      <key>member_id</key>
      <type>fkey</type>
      <displayfield>name+'-'+r_member.mobile</displayfield>
      <notnull>1</notnull>
      <tablename>tb_member</tablename>
      <ntbname>r_member</ntbname>
      <condition>1=1 </condition>
      <disableindetail>1</disableindetail>
    </field>
    <field>
      <name>预约人姓名</name>
      <key>name</key>
      <type>text</type>
      <search>1</search>
      <displayinlist>1</displayinlist>
      <disableindetail>1</disableindetail>
    </field>
    <field>
      <name>预约人手机</name>
      <key>mobile</key>
      <type>text</type>
      <search>1</search>
      <displayinlist>1</displayinlist>
      <disableindetail>1</disableindetail>
    </field>
    <field>
      <name>预约日期</name>
      <key>order_date</key>
      <type>datetime</type>
      <search>1</search>
      <displayinlist>1</displayinlist>
      <disableindetail>1</disableindetail>
    </field>
    <field>
      <name>预约时间</name>
      <key>order_time</key>
      <type>text</type>
      <search>1</search>
      <displayinlist>1</displayinlist>
      <disableindetail>1</disableindetail>
    </field>
    <field>
      <name>价格</name>
      <key>price</key>
      <type>text</type>
      <disableindetail>1</disableindetail>
    </field>
    <field>
      <name>折扣</name>
      <key>discount</key>
      <type>text</type>
      <disableindetail>1</disableindetail>
    </field>
    <field>
      <name>订单类型</name>
      <key>act</key>
      <type>select</type>
      <options>
        <option>
          <name>视频会诊</name>
          <value>VC</value>
        </option>
        <option>
          <name>图文咨询</name>
          <value>CC</value>
        </option>
      </options>
      <displayinlist>1</displayinlist>
      <disableindetail>1</disableindetail>
    </field>
    <field>
      <name>状态</name>
      <key>status</key>
      <type>select</type>
      <displayinlist>1</displayinlist>
      <options>
        <option>
          <name>订单创建</name>
          <value>T</value>
        </option>
        <option>
          <name>等待处理</name>
          <value>P</value>
        </option>
        <option>
          <name>完成订单</name>
          <value>F</value>
        </option>
        <option>
          <name>已取消</name>
          <value>C</value>
        </option>
      </options>
      <search>1</search>
      <disableindetail>1</disableindetail>
    </field>
    <field>
      <name>关联医生</name>
      <key>doctor_id</key>
      <type>fkey</type>
      <displayfield>license+r_doctor.name</displayfield>
      <notnull>1</notnull>
      <tablename>tb_doctor</tablename>
      <ntbname>r_doctor</ntbname>
      <condition>1=1 </condition>
      <search>1</search>
      <displayinlist>1</displayinlist>
      <disableindetail>1</disableindetail>
    </field>
    <field>
      <name>备注描述</name>
      <key>remark</key>
      <type>longtext</type>
    </field>
    <field>
      <name>已付款?</name>
      <key>payment</key>
      <type>select</type>
      <options>
        <option>
          <name>是</name>
          <value>Y</value>
        </option>
        <option>
          <name>否</name>
          <value>N</value>
        </option>
      </options>
      <disableindetail>1</disableindetail>
    </field>
    <field>
      <name>付款时间</name>
      <key>payment_time</key>
      <type>datetime</type>
      <disableindetail>1</disableindetail>
    </field>
    <field>
      <name>付款方式?</name>
      <key>payment_type</key>
      <type>select</type>
      <options>
        <option>
          <name>ALIPAY</name>
          <value>支付宝</value>
        </option>
        <option>
          <name>其它</name>
          <value>N</value>
        </option>
      </options>
      <disableindetail>1</disableindetail>
    </field>
  </fields>
  <javascripts>
    <javascript>
      <filename>order.js</filename>
      <detail>1</detail>
    </javascript>
    <javascript>
    </javascript>
  </javascripts>
</root>