<?xml version="1.0" encoding="utf-8" ?>
<root>
  <name>新闻</name>
  <tablename>tb_news</tablename>
  <searchcondition>r_main.status&lt;&gt;'D'</searchcondition>
  <fields>
    <field>
      <name>新闻标题</name>
      <key>title</key>
      <type>text</type>
      <displayinlist>1</displayinlist>
      <gotodetail>1</gotodetail>
      <notnull>1</notnull>
      <search>1</search>
    </field>
    <field>
      <name>发布日期</name>
      <key>publish_date</key>
      <type>datetime</type>
      <displayinlist>1</displayinlist>
      <gotodetail>1</gotodetail>
      <notnull>1</notnull>
      <search>1</search>
    </field>
    <field>
      <name>缩率图</name>
      <key>thumbnail</key>
      <type>upload</type>
      <displayinlist>1</displayinlist>
      <gotodetail>1</gotodetail>
      <notnull>1</notnull>
      <uploadmodule>news</uploadmodule>
      <filetype>image</filetype>
    </field>
    <field>
      <name>详情页大图</name>
      <key>photo</key>
      <type>upload</type>
      <uploadmodule>news</uploadmodule>
      <filetype>image</filetype>
    </field>
    <field>
      <name>新闻类型</name>
      <key>news_type</key>
      <type>select</type>
      <displayinlist>1</displayinlist>
      <options>
        <option>
          <name>一般新闻</name>
          <value>G</value>
          <default>1</default>
        </option>
        <option>
          <name>特别新闻</name>
          <value>S</value>
        </option>
      </options>
      <search>1</search>
      <notnull>1</notnull>
    </field>
    <field>
      <name>新闻分类</name>
      <key>category</key>
      <type>select</type>
      <displayinlist>1</displayinlist>
      <options>
        <option>
          <name>健康食谱</name>
          <value>H</value>
        </option>
        <option>
          <name>孕产常识</name>
          <value>P</value>
        </option>
        <option>
          <name>四级生长指标</name>
          <value>F</value>
        </option>
        <option>
          <name>早教方法</name>
          <value>E</value>
        </option>
        <option>
          <name>营养及运动</name>
          <value>V</value>
        </option>
      </options>
      <search>1</search>
      <notnull>1</notnull>
    </field>
    <field>
      <name>关联医生</name>
      <key>doctor_id</key>
      <type>fkey</type>
      <displayfield>license+'-'+r_doctor.name</displayfield>
      <tablename>tb_doctor</tablename>
      <ntbname>r_doctor</ntbname>
      <condition>1=1 </condition>
    </field>
    <field>
      <name>简介</name>
      <key>summary</key>
      <type>longtext</type>
      <notnull>1</notnull>
    </field>
    <field>
      <name>正文</name>
      <key>content</key>
      <type>html</type>
      <notnull>1</notnull>
    </field>
    <field>
      <name>备注</name>
      <key>remarks</key>
      <type>longtext</type>
    </field>
    <field>
      <name>状态</name>
      <key>status</key>
      <type>select</type>
      <displayinlist>1</displayinlist>
      <options>
        <option>
          <name>启用</name>
          <value>A</value>
          <default>1</default>
        </option>
        <option>
          <name>禁用</name>
          <value>I</value>
        </option>
      </options>
      <search>1</search>
      <notnull>1</notnull>
    </field>
  </fields>
  <options>
    <option>
      <name>新增</name>
      <type>function</type>
      <function>addNew()</function>
      <search>1</search>
      <detail>1</detail>
    </option>
    <option>
      <name>删除</name>
      <type>function</type>
      <function>btnDeleteInList()</function>
      <search>1</search>
    </option>
  </options>
</root>