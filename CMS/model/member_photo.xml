<?xml version="1.0" encoding="utf-8" ?>
<root>
  <name>会员</name>
  <tablename>tb_member_photo</tablename>
  <searchcondition>r_main.status='A'</searchcondition>
  <fields>
    <field>
      <name>会员</name>
      <key>member_id</key>
      <type>fkey</type>
      <displayfield>name</displayfield>
      <tablename>tb_member</tablename>
      <ntbname>r_cate</ntbname>
      <condition>r_cate.status='A'</condition>
    </field>
    <field>
      <name>标题</name>
      <key>title</key>
      <type>text</type>
      <displayinlist>1</displayinlist>
    </field>
    <field>
      <name>描述</name>
      <key>description</key>
      <type>longtext</type>
      <displayinlist>1</displayinlist>
    </field>
    <field>
      <name>病例图片</name>
      <key>photo</key>
      <type>upload</type>
      <uploadmodule>member</uploadmodule>
      <filetype>image</filetype>
    </field>
    <field>
      <name>状态</name>
      <key>status</key>
      <type>select</type>
      <options>
        <option>
          <name>启用</name>
          <value>A</value>
          <default>1</default>
        </option>
        <option>
          <name>禁用</name>
          <value>I</value>
        </option>
      </options>
      <notnull>1</notnull>
    </field>
  </fields>
</root>