<?xml version="1.0" encoding="utf-8" ?>
<root>
  <name>会员</name>
  <tablename>tb_member</tablename>
  <searchcondition>r_main.status&lt;&gt;'D'</searchcondition>
  <fields>
    <field>
      <name>姓名</name>
      <key>name</key>
      <type>text</type>
      <displayinlist>1</displayinlist>
      <gotodetail>1</gotodetail>
      <notnull>1</notnull>
      <search>1</search>
      <disableindetail>1</disableindetail>
    </field>
    <field>
      <name>手机号码</name>
      <key>name</key>
      <type>text</type>
      <displayinlist>1</displayinlist>
      <gotodetail>1</gotodetail>
      <notnull>1</notnull>
      <search>1</search>
      <disableindetail>1</disableindetail>
    </field>
    <field>
      <name>重置密码</name>
      <key>password</key>
      <type>password</type>
      <notnull>1</notnull>
    </field>
    <field>
      <name>状态</name>
      <key>status</key>
      <type>select</type>
      <displayinlist>1</displayinlist>
      <options>
        <option>
          <name>启用</name>
          <value>A</value>
          <default>1</default>
        </option>
        <option>
          <name>禁用</name>
          <value>I</value>
        </option>
      </options>
      <search>1</search>
      <notnull>1</notnull>
    </field>
    <field>
      <name>头像</name>
      <key>photo</key>
      <type>upload</type>
      <displayinlist>1</displayinlist>
      <gotodetail>1</gotodetail>
      <notnull>1</notnull>
      <uploadmodule>member</uploadmodule>
      <filetype>image</filetype>
      <disableindetail>1</disableindetail>
    </field>
    <field>
      <name>性别</name>
      <key>sex</key>
      <type>select</type>
      <displayinlist>1</displayinlist>
      <options>
        <option>
          <name>男</name>
          <value>M</value>
          <default>1</default>
        </option>
        <option>
          <name>女</name>
          <value>F</value>
        </option>
      </options>
      <notnull>1</notnull>
      <disableindetail>1</disableindetail>
    </field>
    <field>
      <name>出生年月</name>
      <key>birth</key>
      <type>text</type>
      <displayinlist>1</displayinlist>
      <disableindetail>1</disableindetail>
    </field>
    <field>
      <name>疾病史</name>
      <key>history</key>
      <type>longtext</type>
      <displayinlist>1</displayinlist>
      <disableindetail>1</disableindetail>
    </field>
    <field>
      <name>备注</name>
      <key>remarks</key>
      <type>longtext</type>
    </field>
  </fields>
</root>