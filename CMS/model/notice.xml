<?xml version="1.0" encoding="utf-8" ?>
<root>
  <name>消息中心</name>
  <tablename>tb_notice</tablename>
  <searchcondition>r_main.status&lt;&gt;'D' and r_main.sent_type in ('M','D')</searchcondition>
  <fields>
    <field>
      <name>标题</name>
      <key>title</key>
      <type>text</type>
      <displayinlist>1</displayinlist>
      <gotodetail>1</gotodetail>
      <notnull>1</notnull>
      <search>1</search>
      <disableindetail>1</disableindetail>
    </field>
    <field>
      <name>发布时间</name>
      <key>publish_date</key>
      <type>datetime</type>
      <displayinlist>1</displayinlist>
      <gotodetail>1</gotodetail>
      <search>1</search>
      <disableindetail>1</disableindetail>
    </field>
    <field>
      <name>类型</name>
      <key>notice_type</key>
      <type>select</type>
      <displayinlist>1</displayinlist>
      <options>
        <option>
          <name>一般</name>
          <value>M</value>
          <default>1</default>
        </option>
        <option>
          <name>重要</name>
          <value>I</value>
        </option>
      </options>
      <search>1</search>
      <notnull>1</notnull>
      <disableindetail>1</disableindetail>
    </field>
    <field>
      <name>发送对象</name>
      <key>sent_type</key>
      <type>select</type>
      <displayinlist>1</displayinlist>
      <options>
        <option>
          <name>会员</name>
          <value>M</value>
          <default>1</default>
        </option>
        <option>
          <name>医生</name>
          <value>D</value>
        </option>
      </options>
      <search>1</search>
      <notnull>1</notnull>
      <disableindetail>1</disableindetail>
    </field>
    <field>
      <name>内容</name>
      <key>context</key>
      <type>longtext</type>
      <notnull>1</notnull>
      <disableindetail>1</disableindetail>
    </field>
    <field>
      <name>备注</name>
      <key>remarks</key>
      <type>longtext</type>
    </field>
    <field>
      <name>状态</name>
      <key>status</key>
      <type>select</type>
      <displayinlist>1</displayinlist>
      <options>
        <option>
          <name>启用</name>
          <value>A</value>
          <default>1</default>
        </option>
        <option>
          <name>禁用</name>
          <value>I</value>
        </option>
      </options>
      <search>1</search>
      <notnull>1</notnull>
    </field>
  </fields>
  <options>
    <option>
      <name>新增</name>
      <type>function</type>
      <function>addNew()</function>
      <search>1</search>
      <detail>1</detail>
    </option>
    <option>
      <name>删除</name>
      <type>function</type>
      <function>btnDeleteInList()</function>
    </option>
  </options>
  <javascripts>
    <javascript>
      <filename>notice.js</filename>
      <detail>1</detail>
    </javascript>
    <javascript>
    </javascript>
  </javascripts>
</root>